<!--公告标题-->
<view class="cu-form-group  margin-top">
  <view class="title">公告标题</view>
  <input name="head" placeholder="请输入公告标题" bindchange="headChange" value="{{head}}"></input>
</view>

<!--公告发出单位-->
<view class="cu-form-group">
  <view class="title">发出单位</view>
  <input name="author" placeholder="请输入发出公告单位" bindchange="authorChange" value="{{author}}"></input>
</view>

<!--长文本输入框-->
<view class="cu-form-group margin-top">
  <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" value="{{textareaAValue}}"
            placeholder="请输入公告内容"></textarea>
</view>

<!--提交按钮-->
<view class="padding flex flex-direction">
  <button class="cu-btn bg-green margin-tb-sm lg" bindtap='submit' >提交</button>
</view>

<!--删除按钮-->
<view class="padding flex flex-direction">
  <button class="cu-btn bg-red  lg" bindtap='delete' >删除</button>
</view>


