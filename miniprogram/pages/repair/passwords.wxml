<!--miniprogram/pages/homePage/password.wxml-->
<!-- <text>miniprogram/pages/homePage/password.wxml</text> -->
<view class='imagesize'>
<image src='/images/password.png' bindload="imageLoad"
style="width: 397rpx; height: 460rpx; display: block; box-sizing: border-box; left: 0rpx; top: 0rpx"  class='in-image'></image></view>
<!--启动密码-->
<view class="cu-form-group">
  <view class="title">用户名</view>
  <input name="password" placeholder="请输入用户名" bindchange="usernameChange"></input>
</view>
<view class="cu-form-group">
  <view class="title" >密<text  style='display:inline-block;width:13px'></text>码</view>
  <input name="password" placeholder="请输入密码" password="true" bindchange="passwordChange"></input>
</view>


<!--提交按钮-->
<view class="padding flex flex-direction">
    <button class="cu-btn bg-green margin-tb-sm lg" bindtap='loginpassword'  style="width: 296rpx; height: 80rpx; display: flex; box-sizing: border-box; left: 0rpx; top: -2rpx; position: relative; background: #27c799">密码登录</button>
    <button class="cu-btn bg-green margin-tb-sm lg" bindtap='loginopenid'  style="position: relative; left: 385rpx; top: -120rpx; width: 296rpx; height: 80rpx; display: flex; box-sizing: border-box; background: #27c799">免密登录</button>
</view>

<!-- 注册按钮 -->
<view class="padding-xl add-wrap-left">
	<navigator url="../dairy" class="row">
		<button class="cu-btn block bg-nefuaxiu margin-tb-sm lg" bindtap="registerHandler" style="position: relative; left: -33rpx; top: -87rpx; width: 683rpx; height: 80rpx; display: flex; box-sizing: border-box; color: white; background: #38B784">
			<text class=""></text>注册</button>
	</navigator>
</view>